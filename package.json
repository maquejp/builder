{
  "name": "@maquestiaux-foundry/stackcraft",
  "version": "0.0.0-beta.0.0.7",
  "description": "A CLI tool to scaffold full-stack projects: folder structure, Angular frontend, ExpressJS backend, and SQL database setup.",
  "main": "index.ts",
  "bin": {
    "stackcraft": "./index.ts"
  },
  "scripts": {
    "start": "clear && npx ts-node index.ts",
    "build": "npx tsc",
    "build:clean": "rm -rf dist && npm run build",
    "test": "echo \"Warning: no test specified\" && exit 0",
    "version:check": "node -p \"require('./package.json').version\"",
    "status": "./scripts/check-status.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maquejp/stackcraft.git"
  },
  "keywords": [
    "stackcraft",
    "scaffold",
    "project-scaffolding",
    "frontend",
    "backend",
    "Angular",
    "NodeJs",
    "ExpressJs",
    "SQL",
    "Database",
    "CLI"
  ],
  "author": "Jean-Philippe Maquestiaux",
  "license": "EUPL-1.2",
  "bugs": {
    "url": "https://github.com/maquejp/stackcraft/issues"
  },
  "homepage": "https://github.com/maquejp/stackcraft#readme",
  "devDependencies": {
    "@types/faker": "6.6.8",
    "@types/fs-extra": "11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.8.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "10.1.0",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
