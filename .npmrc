# âš™ï¸ Install Consistency
# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Fail install if the lockfile and package.json are out of sync
# (Set to "true" once your lockfile stabilizes)
frozen-lockfile=false

# Prefer local cache; speeds up cross-platform re-installs
prefer-offline=true

# Ensure reproducible builds
audit=false
fund=false
