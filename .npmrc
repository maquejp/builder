# Use the modern lockfile format (v3 works best with npm 7+)
lockfile-version=3

# Always generate and respect the package-lock.json file
package-lock=true

# Prevent platform-specific optional deps (like fsevents) to reduce noise
optional=false

# Install exactly the versions specified (no ^ or ~ prefixes)
save-exact=true

# Always install from the public npm registry
registry=https://registry.npmjs.org/

