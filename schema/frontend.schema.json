{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://stackcraft.dev/schemas/frontend.json",
    "title": "Frontend Configuration",
    "description": "Schema for frontend configuration",
    "type": "object",
    "required": [
        "type",
        "framework"
    ],
    "properties": {
        "type": {
            "type": "string",
            "description": "The frontend technology type",
            "enum": [
                "eUI",
                "React",
                "Vue",
                "Angular",
                "Svelte",
                "Vanilla"
            ]
        },
        "framework": {
            "type": "string",
            "description": "The frontend framework",
            "minLength": 1
        }
    },
    "additionalProperties": false
}